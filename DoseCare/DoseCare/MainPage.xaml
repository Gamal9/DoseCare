             xmlns:local="clr-namespace:DoseCare" Padding="15"
             x:Class="DoseCare.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="DoseLogo.png"/>
        <StackLayout Grid.Row="1">
            <Label Text=" مرحبا بك في  " VerticalOptions="Center" FontSize="Medium" HorizontalOptions="Center"/>
            <Button HorizontalOptions="CenterAndExpand" Text="جرعة " FontSize="Large" VerticalOptions="Center" TextColor="White" BackgroundColor="#58D68D" Clicked="Button_Clicked"/>
        </StackLayout>
    </Grid>
</ContentPage>
